TEST_SRCS = glob(["tests/*.rs"])

[
    rust_test(
        name = src.replace("tests/", "").replace(".rs", "").replace("_", "-"),
        size = "small",
        srcs = [src],
        edition = "2024",
        rustc_flags = ["-Clink-arg=-fuse-ld=bfd"],
        deps = [
            ":merkle-tox-core",
            "//rs-toxcore-c/merkle-tox-fs",
            "//rs-toxcore-c/tox-proto",
            "//rs-toxcore-c/tox-reconcile",
            "@crates//:bao",
            "@crates//:blake3",
            "@crates//:curve25519-dalek",
