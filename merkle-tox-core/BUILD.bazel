            "@crates//:hex",
            "@crates//:rand",
            "@crates//:proptest",
            "@crates//:rmp-serde",
            "@crates//:serde",
            "@crates//:serde_bytes",
            "@crates//:tempfile",
            "@crates//:tracing-subscriber",
            "@crates//:x25519-dalek",
        ],
    )
    for src in TEST_SRCS
]

rust_binary(
    name = "core_bench",
    srcs = ["benches/core_bench.rs"],
    edition = "2024",
    rustc_flags = ["-Clink-arg=-fuse-ld=bfd"],
    deps = [
        ":merkle-tox-core",
        "//rs-toxcore-c/tox-proto",
        "//rs-toxcore-c/tox-reconcile",
        "@crates//:bao",
        "@crates//:blake3",
        "@crates//:criterion",
    ],
)

rust_clippy(
    name = "clippy",
    testonly = True,
    deps = [
        ":merkle-tox-core",
        ":core_bench",
    ] + [
        ":" + src.replace("tests/", "").replace(".rs", "").replace("_", "-")
        for src in TEST_SRCS
    ],
)